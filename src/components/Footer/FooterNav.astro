---
import { FOOTER_NAVIGATION } from '@/constants/footer-navigation'
import ColumnSeparator from '@/icons/column-separator.astro'
---

<nav class='sm:flex hidden flex-col pl-[6em] gap-y-2 h-full relative'>
  <ColumnSeparator class='absolute h-full left-0' />
  {
    FOOTER_NAVIGATION.map(({ value, href }) => (
      <a href={href} class='text-neutral font-bold uppercase'>
        {value}
      </a>
    ))
  }
  <ColumnSeparator class='absolute h-full right-0' />
</nav>
