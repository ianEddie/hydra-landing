---
import { Image } from 'astro:assets'
import logo from '@/assets/footer/footer-logo.webp'
import FooterNav from './FooterNav.astro'
import FooterMenuList from './FooterMenuList.astro'
import FooterContact from './FooterContact.astro'
---

<footer
  id='footer'
  class='sm:px-16 px-0 sm:py-20 py-10 sm:gap-y-0 gap-10 sm:grid sm:grid-cols-4 flex flex-col items-center'
>
  <!-- Logo -->
  <picture>
    <Image
      src={logo}
      alt='Logo of Hydra'
      width={logo.width}
      height={logo.height}
    />
  </picture>
  <!-- Menu 1 -->
  <FooterNav />
  <!-- Menu 2 -->
  <FooterMenuList />
  <!-- Contact -->
  <FooterContact />
</footer>
