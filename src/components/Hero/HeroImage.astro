---
import { Image } from 'astro:assets'
import image from '@/assets/hero/image.png'
---

<article
  class='sm:flex hidden items-center sm:justify-end justify-center sm:pr-16 relative'
>
  <Image
    src={image}
    alt='image of a girl'
    width='490'
    height='426'
    class='aspect-auto z-10 sm:h-auto sm:w-auto w-[80%]'
  />
</article>
<style>
  article {
    background-image: url('../../assets/hero/hero-bg.png');
    background-position: 0px;
    background-size: 112% 200%;
    background-repeat: no-repeat;
  }
</style>
